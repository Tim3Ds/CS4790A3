                    @Html.ValidationMessageFor(model => model.emailConfirm, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.T_shirt, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.T_shirt, new { htmlAttributes = new { @class = "form-control" } })
