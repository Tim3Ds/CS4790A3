@model IEnumerable<CS4790A3.Models.Runners>

@{
    ViewBag.Title = "Runner Registration";
}

<div class="jumbotron">
    <h1>Runner Registration</h1>
    <p class="lead">Register for 5K Run</p>
    <p></p>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Register</h2>
        <p>@Html.ActionLink("Click Here", "Register")</p>
    </div>
    <div class="col-md-6">
        <h2>Runners</h2>
        <p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.firstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.lastName)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.firstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.lastName)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "View", new { id = item.contactID }) 
                        </td>
                    </tr>
                }

            </table>

        </p>
    </div>
    
    
</div>